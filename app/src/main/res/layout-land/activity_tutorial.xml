<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TutorialActivity" android:background="@color/colorPrimary">

    <Button
            android:layout_width="@dimen/back_button_size"
            android:layout_height="@dimen/back_button_size"
            android:id="@+id/tutorial_activity_back_button" android:layout_marginTop="@dimen/default_margin_top"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="@dimen/default_margin_start"
            style="@style/Widget.AppCompat.Button.Borderless" android:background="?attr/homeAsUpIndicator"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="190dp" app:srcCompat="@drawable/pikachu"
            android:id="@+id/tutorial_activity_image_pikachu_l"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="@dimen/default_margin_start"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="@dimen/default_margin_end"
            android:layout_marginTop="@dimen/big_margin_top" app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/default_no_image_found"/>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp" app:layout_constraintTop_toBottomOf="@+id/tutorial_activity_image_pikachu_l"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="@dimen/default_margin_start"
            android:layout_marginEnd="@dimen/default_margin_end" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="@dimen/default_margin_bottom"
            android:layout_marginTop="@dimen/default_margin_top">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <TextView
                    android:text="@string/tutorial_activity_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tutorial_activity_text_how_to_play_l"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="@dimen/default_margin_start" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="@dimen/default_margin_end"
                    android:fontFamily="@font/architects_daughter" android:textAlignment="center"
                    android:textSize="16sp"
                    android:layout_marginTop="@dimen/default_margin_top"
                    app:layout_constraintTop_toBottomOf="@+id/tutorial_activity_image_pikachu"/>
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/tutorial_image_clipart_height" app:srcCompat="@drawable/proximity"
                    android:id="@+id/tutorial_activity_image_shake_l"
                    android:layout_weight="1" android:contentDescription="@string/default_no_image_found"/>
            <TextView
                    android:text="@string/tutorial_activity_text_shake"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/tutorial_activity_text_shake_l"
                    android:textAlignment="center" android:fontFamily="@font/architects_daughter"/>
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/tutorial_image_clipart_height" app:srcCompat="@drawable/shake"
                    android:id="@+id/tutorial_activity_image_proximity_l"
                    android:contentDescription="@string/default_no_image_found"/>
            <TextView
                    android:text="@string/tutorial_activity_text_proximity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/tutorial_activity_text_proximity_l"
                    android:textAlignment="center" android:fontFamily="@font/architects_daughter"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>