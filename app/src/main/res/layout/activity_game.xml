<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".GameActivity" android:background="@color/colorPrimary">

    <Button
            android:text=""
            android:layout_width="@dimen/game_button_size"
            android:layout_height="wrap_content"
            android:id="@+id/game_activity_button_answer1"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/default_margin_start" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="@dimen/default_margin_end"
            app:layout_constraintHorizontal_bias="0.501"
            android:textColor="@color/colorAccentDarkest" android:layout_marginTop="@dimen/big_margin_top"
            app:layout_constraintTop_toBottomOf="@+id/game_activity_text_round_result"/>
    <Button
            android:text=""
            android:layout_width="@dimen/game_button_size"
            android:layout_height="wrap_content"
            android:id="@+id/game_activity_button_answer2"
            android:layout_marginTop="@dimen/big_margin_top" app:layout_constraintTop_toBottomOf="@+id/game_activity_button_answer1"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="@dimen/default_margin_start"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="@dimen/default_margin_end"
            app:layout_constraintHorizontal_bias="0.501"
            android:textColor="@color/colorAccentDarkest"/>
    <Button
            android:text=""
            android:layout_width="@dimen/game_button_size"
            android:layout_height="wrap_content"
            android:id="@+id/game_activity_button_answer3" android:layout_marginTop="@dimen/big_margin_top"
            app:layout_constraintTop_toBottomOf="@+id/game_activity_button_answer2"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/default_margin_end" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/default_margin_start"
            android:textColor="@color/colorAccentDarkest"/>
    <Button
            android:text=""
            android:layout_width="@dimen/game_button_size"
            android:layout_height="wrap_content"
            android:id="@+id/game_activity_button_answer4"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/default_margin_end" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/default_margin_start"
            app:layout_constraintHorizontal_bias="0.501"
            android:layout_marginTop="@dimen/big_margin_top" app:layout_constraintTop_toBottomOf="@+id/game_activity_button_answer3"
            android:textColor="@color/colorAccentDarkest"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/game_activity_text_time_counter"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/default_margin_end" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/default_margin_start"
            app:layout_constraintHorizontal_bias="0.503" android:textSize="72sp"
            android:fontFamily="@font/luckiest_guy"
            android:textColor="@color/colorAccentDarkest" android:layout_marginTop="@dimen/default_margin_top"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="@dimen/default_margin_bottom"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.19999999"/>
    <Button
            android:layout_width="@dimen/back_button_size"
            android:layout_height="@dimen/back_button_size"
            android:id="@+id/game_activity_button_back" android:layout_marginTop="@dimen/default_margin_top"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/default_margin_start" android:background="?attr/homeAsUpIndicator" android:onClick="goBack"/>

    <TextView
        android:id="@+id/game_activity_text_round_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_margin_start"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="@dimen/default_margin_end"
        android:fontFamily="@font/luckiest_guy"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/game_activity_text_time_counter" />

</androidx.constraintlayout.widget.ConstraintLayout>