<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".MainActivity" android:background="@drawable/tlo_1">
    <Button
            android:text="@string/main_activity_button_play"
            android:layout_width="@dimen/main_button_width"
            android:layout_height="wrap_content"
            android:id="@+id/main_activity_button_play" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/default_margin_start" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="@dimen/default_margin_end"
            android:layout_marginTop="@dimen/default_margin_top" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.499" android:background="@drawable/main_button"
            android:fontFamily="@font/architects_daughter" android:textSize="18sp" android:textStyle="bold"
            style="@style/Widget.AppCompat.Button.Borderless"

            android:layout_marginBottom="@dimen/default_margin_bottom" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.3"/>
    <Button
            android:text="@string/main_activity_button_tutorial"
            android:layout_width="@dimen/main_button_width"
            android:layout_height="wrap_content"
            android:id="@+id/main_activity_button_tutorial" android:layout_marginTop="@dimen/big_margin_top"
            app:layout_constraintTop_toBottomOf="@+id/main_activity_button_play"
            android:fontFamily="@font/architects_daughter" android:textSize="18sp"
            android:background="@drawable/main_button" android:layout_marginEnd="@dimen/default_margin_end"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="@dimen/default_margin_start"
            app:layout_constraintStart_toStartOf="parent" android:textStyle="bold"/>
</androidx.constraintlayout.widget.ConstraintLayout>